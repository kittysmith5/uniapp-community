.list-box {
  width: 100%;
  padding: 30rpx;
  font-size: 30rpx;
  background-color: #fafafa;
}
.list-box .list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 102rpx;
  font-weight: 700;
  border-top: 1rpx solid #F1F1F1;
}
.list-box .list .left-box {
  display: flex;
  align-items: center;
  font-size: 30rpx;
}
.list-box .list .left-box image {
  width: 100%;
  height: 100%;
}
.list-box .right-box {
  display: flex;
  align-items: center;
  color: #b3b3b3;
  font-weight: 500;
  font-size: 28rpx;
}
.list-box .right-box image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 18rpx;
}
.logout {
  background-color: red;
  color: #ffffff;
  width: 70%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  position: absolute;
  bottom: 100rpx;
  left: 15%;
  right: 15%;
}

